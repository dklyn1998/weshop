/* pages/index/goods/goodsDetail/goodsDetail.wxss */
@font-face {
  font-family: 'iconfont';
  src: url('iconfont.eot');
  font-weight: normal;
  font-style: normal;
}
@font-face {
  font-family: 'iconfont';
  src: url(data:application/font-woff2;charset=utf-8;base64,) format('woff2'), url(data:application/font-woff;charset=utf-8;base64,) format('woff'), url('iconfont.ttf') format('truetype'), url('iconfont.svg#iconfont') format('svg');
  font-weight: normal;
  font-style: normal;
}
.iconfont {
  font-family: "iconfont" !important;
  font-size: 16px;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}
.icon-youjiantou:before {
  content: "\e612";
}
.goods_detail_img {
  width: 100%;
  margin-bottom: 20rpx;
}
.goods_detail_msg {
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
}
.goods_detail_msg .goods_detail_title {
  font-size: 28rpx;
  color: #333333;
  width: 80%;
}
.goods_detail_msg .goods_money {
  color: #FF0060;
  font-size: 34rpx;
  margin: 10rpx 0;
  font-weight: bold;
}
.goods_detail_msg .goods_detail_msg_info {
  font-size: 24rpx;
  line-height: 41rpx;
  color: #999999;
  display: flex;
  justify-content: space-between;
}
.coupon {
  margin-top: 10rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 88rpx;
  width: 100%;
  color: #999999;
  font-size: 24rpx;
}
.coupon .coupon_left {
  display: flex;
}
.coupon .coupon_left text {
  margin-right: 30rpx;
  font-size: 28rpx;
}
.coupon .coupon_left view {
  display: flex;
  align-items: center;
  color: #333333;
}
.coupon .coupon_right {
  display: flex;
  align-items: center;
}
.choose {
  margin-top: 10rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 88rpx;
  width: 100%;
  color: #999999;
  font-size: 24rpx;
}
.choose .choose_left {
  display: flex;
}
.choose .choose_left text {
  margin-right: 30rpx;
  font-size: 28rpx;
}
.choose .choose_left view {
  display: flex;
  align-items: center;
  color: #333333;
}
.choose .choose_right {
  display: flex;
  align-items: center;
}
.goods_detail_img {
  width: 100%;
  height: 70rpx;
  background-color: #DDDDDD;
  color: #333333;
  line-height: 70rpx;
  text-align: center;
  margin: 0;
}
.img_goods {
  width: 100%;
}
.img_goods:nth-last-of-type(1) {
  margin-bottom: 110rpx;
}
.goods_pay_for {
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  position: fixed;
  bottom: 0;
  left: 0;
  background-color: #fff;
  border-top: 1rpx solid #DDDDDD;
  z-index: 200;
}
.goods_pay_for .kefu,
.goods_pay_for .shopping_car {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 22rpx;
  color: #666;
  position: relative;
}
.goods_pay_for .kefu image,
.goods_pay_for .shopping_car image {
  width: 35rpx;
  margin-bottom: 10rpx;
}
.goods_pay_for .kefu button,
.goods_pay_for .shopping_car button {
  background-color: rgba(0, 0, 0, 0);
  border-radius: 0;
  position: absolute;
  left: 0;
  top: 0;
  width: 70rpx;
  height: 100rpx;
}
.goods_pay_for .kefu button::after,
.goods_pay_for .shopping_car button::after {
  border: none;
}
.goods_pay_for .shopping_car image {
  width: 37rpx;
}
.goods_pay_for .add_shopping_car,
.goods_pay_for .pay_for {
  height: 80rpx;
  width: 210rpx;
  color: #FF0060;
  border: 1rpx solid #FF0060;
  border-radius: 40rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}
.goods_pay_for .pay_for {
  background-color: #FF0060;
  color: #fff;
}
.black_sheet {
  background-color: rgba(0, 0, 0, 0.21);
  width: 100%;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
}
.choose_info {
  position: fixed;
  left: 0;
  bottom: 100rpx;
  background-color: #fff;
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
  height: 600rpx;
  display: flex;
  justify-content: space-around;
  flex-direction: column;
  font-size: 28rpx;
  color: #333333;
}
.choose_info .choose_info_title {
  width: 80%;
  line-height: 50rpx;
}
.choose_info .choose_info_color {
  display: flex;
  flex-direction: column;
  justify-content: center;
  height: 140rpx;
  border-bottom: 1rpx solid #DBDBDB;
}
.choose_info .choose_info_color .choose_info_color_confirm {
  margin-top: 20rpx;
  display: flex;
}
.choose_info .choose_info_color .choose_info_color_confirm text {
  width: 100rpx;
  height: 44rpx;
  text-align: center;
  line-height: 44rpx;
  color: #333333;
  border-radius: 22rpx;
  border: 1rpx solid #ccc;
  margin-left: 20rpx;
}
.choose_info .choose_info_color .choose_info_color_confirm text:nth-of-type(1) {
  margin-left: 0;
}
.choose_info .choose_info_color .choose_info_color_confirm .active {
  color: #fff;
  background-color: #FF0060;
}
.choose_info .choose_info_size {
  display: flex;
  flex-direction: column;
  justify-content: center;
  height: 140rpx;
  border-bottom: 1rpx solid #DBDBDB;
}
.choose_info .choose_info_size .choose_info_size_confirm {
  margin-top: 20rpx;
  display: flex;
}
.choose_info .choose_info_size .choose_info_size_confirm text {
  width: 50rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  color: #FF0060;
  border-radius: 25rpx;
  border: 1rpx solid #FF0060;
  margin-left: 20rpx;
}
.choose_info .choose_info_size .choose_info_size_confirm text:nth-of-type(1) {
  margin-left: 0;
}
.choose_info .choose_info_size .choose_info_size_confirm .active {
  color: #fff;
  background-color: #FF0060;
}
.choose_info .choose_info_num {
  display: flex;
  justify-content: space-between;
}
.choose_info .last_btn_area {
  display: flex;
}
.choose_info .last_btn_area .add_min {
  display: flex;
  width: 120rpx;
  height: 40rpx ;
  border-radius: 20rpx;
  justify-content: space-between;
  align-items: center;
  border: 1rpx solid #E5E5E5;
}
.choose_info .last_btn_area .add_min image {
  width: 16rpx;
  margin: 0 auto;
}
.choose_info .last_btn_area .add_min input {
  width: 40rpx;
  border-left: 1rpx solid #E5E5E5;
  border-right: 1rpx solid #E5E5E5;
  text-align: center;
  font-size: 22rpx;
  color: #333333;
}
.red_bag {
  width: 100%;
  height: 800rpx;
  position: fixed;
  background-color: #fff;
  left: 0;
  bottom: 0;
  z-index: 400;
  text-align: center;
}
