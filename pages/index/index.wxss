.pic_text {
  margin: 24rpx auto;
  width: 92%;
  background-color: #E4E4E4;
  position: relative;
}
.pic_text image {
  width: 100%;
}
.pic_text .text_area {
  position: absolute;
  display: flex;
  flex-direction: column;
  left: 70rpx;
  top: 120rpx;
}
.pic_text .text_area text:nth-child(1) {
  font-size: 34rpx;
  line-height: 50rpx;
}
.pic_text .text_area text:nth-child(2) {
  font-size: 20rpx;
}
